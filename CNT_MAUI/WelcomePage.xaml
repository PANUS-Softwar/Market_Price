<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CNT_MAUI.WelcomePage"
             Title="">
    <ScrollView>
        <VerticalStackLayout
            Spacing="20"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="marketprice_logo.png"
                SemanticProperties.Description="Logo of the MarketPrice!"
                HeightRequest="200"
                HorizontalOptions="Center"/>

            <Label 
                Text="Welcome to MarketPrice"
                VerticalOptions="Center" 
                FontSize="25"
                FontAttributes="Bold"
                FontFamily=""
                TextColor="MediumBlue"
                HorizontalOptions="Center"/>

            <Label
                Text="Your reliable platform for discovering real time market prices and insights."
                FontSize="15"
                HorizontalTextAlignment="Center"
                HorizontalOptions="Center"/>

            <Button
                Text="Get Started"
                FontAttributes="Bold"
                BackgroundColor="MediumBlue"
                TextColor="White"
                HorizontalOptions="Center"
                WidthRequest="250"
                Margin="0, 75, 0, 0"
                CornerRadius="15"
                Clicked="GetStartedClicked"/>

            <Label
                Text="By continuing, you agree to our terms and conditions."
                FontSize="10"
                HorizontalTextAlignment="Center"/>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>