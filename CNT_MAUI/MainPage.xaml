<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CNT_MAUI.MainPage">
    
    <ScrollView>
        <VerticalStackLayout
            Padding="15,15"
            Spacing="5">

            <Label
                Text="Welcome, Tertullien !"
                FontSize="25"
                FontFamily=""
                TextColor="MediumBlue"
                FontAttributes="Bold"/>

            <Label
                Text="Ready to discover a price that satisfy you ?"
                FontSize="13"/>

            <Border
                HeightRequest="7"
                BackgroundColor="MediumBlue"
                Margin="0,15"/>

            <Label
                Text="Trending Market Activities"
                FontSize="20"
                FontAttributes="Bold"
                FontFamily="Empty"
                Margin="0,0,0,15"/>

            <Grid
                RowDefinitions="*, Auto">
                <Border
                    BackgroundColor="WhiteSmoke"
                    Padding="10"
                    WidthRequest="175"
                    HeightRequest="125"
                    HorizontalOptions="Start"
                    StrokeShape="RoundRectangle 15">
                    <Label
                        Text="Total Active Bids"
                        FontSize="15"
                        FontAttributes="Bold"
                        FontFamily="Empty"
                        HorizontalTextAlignment="Center"
                        />
                </Border>

                <Border
                    BackgroundColor="WhiteSmoke"
                    Padding="10"
                    WidthRequest="175"
                    HeightRequest="125"
                    HorizontalOptions="End"
                    StrokeShape="RoundRectangle 15">
                </Border>
            </Grid>

            <Border BackgroundColor="MediumBlue" 
            StrokeShape="RoundRectangle 20" 
            Padding="20"
            StrokeThickness="1"
            Stroke="#3A435A">

                <VerticalStackLayout Spacing="15" x:Name="MarketDataLayout">

                    <!-- Title Row -->
                    <Grid ColumnDefinitions="*, Auto">
                        <Label Text="Active Price Discovery" 
                       TextColor="White" 
                       FontSize="18"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                        <Label Text="LIVE" 
                       Grid.Column="1"
                       TextColor="#B0B5C2"
                       BackgroundColor="#3A435A" 
                       FontSize="12"
                       Padding="8, 2"
                       HorizontalOptions="End"/>
                    </Grid>

                    <!-- Separator Line (Using BoxView) -->
                    <BoxView HeightRequest="1"
                     Color="#3A435A" 
                     HorizontalOptions="Fill" />

                    <!-- Bids and Asks Data -->
                    <Grid ColumnDefinitions="*, *" RowSpacing="10">

                        <!-- BIDS SECTION -->
                        <VerticalStackLayout Grid.Column="0" Spacing="5" Padding="0, 0, 10, 0">
                            <Label Text="Total Active Bids" 
                           TextColor="#B0B5C2" 
                           FontSize="12" 
                           TextTransform="Uppercase"/>
                            <Label x:Name="BidsCountLabel"
                           Text="--"
                           TextColor="#4D9DE0" 
                           FontSize="40" 
                           FontAttributes="Bold" />
                        </VerticalStackLayout>

                        <!-- ASKS SECTION (using a BoxView for the vertical separator) -->
                        <BoxView WidthRequest="1" Color="#3A435A" VerticalOptions="Fill" Grid.Column="0" HorizontalOptions="End" Margin="0, 5, 0, 0" />

                        <VerticalStackLayout Grid.Column="1" Spacing="5" Padding="15, 0, 0, 0">
                            <Label Text="Total Active Offers" 
                           TextColor="#B0B5C2" 
                           FontSize="12" 
                           TextTransform="Uppercase"/>
                            <Label x:Name="AsksCountLabel"
                           Text="--"
                           TextColor="#4D9DE0" 
                           FontSize="40" 
                           FontAttributes="Bold" />
                        </VerticalStackLayout>

                    </Grid>

                    <Button Text="View Full Activity Dashboard" 
                    BackgroundColor="#4D9DE0" 
                    TextColor="White" 
                    CornerRadius="10"
                    HeightRequest="48"
                    Margin="0, 10, 0, 0"
                    Clicked="OnViewMarketActivityClicked"
                    FontAttributes="Bold"
                    HorizontalOptions="Fill" />

                </VerticalStackLayout>
            </Border>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
