<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CNT_MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CNT_MAUI"
    Title="CNT_MAUI">

    <ShellContent
        Title="Welcome"
        ContentTemplate="{DataTemplate local:WelcomePage}"
        Route="WelcomePage"
        Shell.NavBarIsVisible="False"/>

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home.png"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" 
            Shell.NavBarIsVisible="False"/>

        <ShellContent
            Title="Market"
            Icon="market.png"
            ContentTemplate="{DataTemplate local:MarketPage}"
            Route="MarketPage"
            Shell.NavBarIsVisible="False"/>

        <ShellContent
            Title="Profile"
            Icon="profile.png"
            ContentTemplate="{DataTemplate local:ProfilePage}"
            Route="ProfilePage"
            Shell.NavBarIsVisible="False"/>
    </TabBar>

</Shell>
