<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TTEK_MAUI.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30"
            VerticalOptions="Center">

            <Label
                Text="Market Watch"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center"
                FontAttributes="Bold"/>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="20">

                <Border Grid.Column="0" Stroke="Gray" Padding="10" Background="#E0F7FA">
                    <VerticalStackLayout>
                        <Label Text="Active Bids" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Text="{Binding BidCount}" 
                               FontSize="40"
                               FontAttributes="Bold" 
                               HorizontalOptions="Center"
                               TextColor="DarkBlue"/>
                    </VerticalStackLayout>
                </Border>

                <Border Grid.Column="1" Stroke="Gray" Padding="10" BackgroundColor="#FFEBEE">
                    <VerticalStackLayout>
                        <Label Text="Active Asks" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Text="{Binding AskCount}"
                               FontSize="40"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="DarkRed"/>
                    </VerticalStackLayout>
                </Border>

            </Grid>

            <Label Text="Waiting for data..."
                   HorizontalOptions="Center"
                   FontSize="Small"
                   TextColor="Gray"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
