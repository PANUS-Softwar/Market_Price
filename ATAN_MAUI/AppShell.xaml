<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ATAN_MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ATAN_MAUI"
    Title="Market Price">

    <ShellContent
        Title="Welcome Page"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" >
        
        <Shell.TitleView>
            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">

                <Image
                    Source="mp_logo.png"  
                    HeightRequest="30"     
                    WidthRequest="30"
                    Aspect="AspectFit" />

                <Label
                    Text="Market Price"
                    VerticalOptions="Center"
                    FontSize="16"
                    FontAttributes="Bold"
                    TextColor="Black" /> 
            </HorizontalStackLayout>
        </Shell.TitleView>
    </ShellContent> 
    
    
</Shell>
